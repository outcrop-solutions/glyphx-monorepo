{
  "name": "@glyphx/email",
  "version": "1.0.0",
  "description": "Transactional Email",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "clean": "rimraf .turbo node_modules dist",
    "coverage": "TS_NODE_FILES=true nyc mocha -r ts-node/register -r tsconfig-paths/register --timeout 999999 --exit --recursive \"src/__tests__/**/*.tests.ts\"",
    "test": "TS_NODE_FILES=true mocha -r ts-node/register -r tsconfig-paths/register --recursive  --timeout 999999 --exit \"src/__tests__/**/*.tests.ts\"",
    "build": "tsup",
    "lint": "gts lint",
    "fix": "gts fix",
    "start:dev": "ts-node src/index.ts",
    "docs": "npx typedoc",
    "count": "npx cloc .  -exclude-ext=csv --by-file-by-lang --exclude-dir=scripts,node_modules,build,.nyc_output,docs"
  },
  "author": "James Graham",
  "license": "ISC",
  "lint-staged": {
    "*.{js,ts}": [
      "gts fix"
    ]
  },
  "devDependencies": {
    "@glyphx/tsconfig": "workspace:*",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.7",
    "@types/nodemailer": "^6.4.7",
    "@types/rewire": "^2.5.28",
    "@types/sinon": "^10.0.13",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.42.0",
    "chai": "^4.3.6",
    "eslint": "^8.12.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-filename-rules": "^1.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "gts": "^3.1.0",
    "mocha": "^10.1.0",
    "nyc": "^15.1.0",
    "lint-staged": "^13.0.3",
    "rewire": "^6.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsx": "^3.7.1",
    "sinon": "^14.0.1",
    "tsup": "^5.11.13",
    "typescript": "^4.8.4",
    "uuid": "^8.3.2"
  },
  "dependencies": {
    "nodemailer": "^6.9.1"
  }
}
