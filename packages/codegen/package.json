{
  "name": "@glyphx/codegen",
  "version": "1.0.0",
  "description": "Code generators for our monorepo",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "clean": "rimraf .turbo node_modules dist",
    "coverage": "TS_NODE_FILES=true nyc mocha -r ts-node/register -r tsconfig-paths/register --timeout 999999 --exit --recursive \"src/__tests__/**/*.tests.ts\"",
    "test": "TS_NODE_FILES=true mocha -r ts-node/register -r tsconfig-paths/register --recursive  --timeout 999999 --exit \"src/__tests__/**/*.tests.ts\"",
    "integrationTest": "DOTENV_CONFIG_PATH=src/__integrationTests__/.env.integration TS_NODE_FILES=true mocha -r ts-node/register -r tsconfig-paths/register  -r dotenv/config --recursive  --timeout 999999 --exit \"src/__integrationTests__/**/*.tests.ts\"",
    "build": "tsup",
    "lint": "gts lint",
    "fix": "gts fix",
    "generate": "ts-node src/index.ts",
    "docs": "npx typedoc",
    "count": "npx cloc .  -exclude-ext=csv --by-file-by-lang --exclude-dir=scripts,node_modules,build,.nyc_output,docs"
  },
  "author": "James Graham",
  "lint-staged": {
    "*.{js,ts}": [
      "gts fix"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@glyphx/core": "workspace:^1.0.0",
    "@glyphx/eslint-config-glyphx-backend": "workspace:*",
    "@glyphx/tsconfig": "workspace:*",
    "@glyphx/types": "workspace:*",
    "@types/chai": "^4.3.3",
    "@types/fs-extra": "^11.0.1",
    "@types/lodash": "^4.14.195",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.7",
    "@types/pluralize": "^0.0.30",
    "@types/rewire": "^2.5.28",
    "@types/sinon": "^10.0.13",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.42.0",
    "chai": "^4.3.6",
    "eslint": "^8.12.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-filename-rules": "^1.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fs-extra": "^11.1.1",
    "gts": "^3.1.0",
    "handlebars": "^4.7.7",
    "lint-staged": "^13.0.3",
    "lodash": "^4.17.21",
    "mocha": "^10.1.0",
    "mongoose": "^6.8.1",
    "nyc": "^15.1.0",
    "pluralize": "^8.0.0",
    "rewire": "^6.0.0",
    "rimraf": "^3.0.2",
    "sinon": "^14.0.1",
    "ts-node": "^10.9.1",
    "tsup": "^5.11.13",
    "tsx": "^3.7.1",
    "typescript": "4.9.5",
    "uuid": "^8.3.2"
  }
}
