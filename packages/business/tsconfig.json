{
  "extends": "@glyphx/tsconfig/node18.json",
  "include": ["src/**/*.ts", "**/*.tsx", "tsup.config.ts"],
  "exclude": ["src/__tests__/**", "src/__integrationTests__/**"],
  "compilerOptions": {
    "baseUrl": "./src/",
    "noImplicitAny": false
  },
  "paths": {
    "@/constants/*": ["constants/*"],
    "@/lib/*": ["lib/*"],
    "@/services/*": ["services/*"],
    "@/validation/*": ["validation/*"]
  }
}
