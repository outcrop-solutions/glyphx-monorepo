{
  "extends": "@glyphx/tsconfig/node18.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "tsup.config.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "./src/",
    "noImplicitAny": false
  },
  "paths": {
    "@/constants/*": ["constants/*"],
    "@/email/*": ["email/*"],
    "@/hooks/*": ["hooks/*"],
    "@/lib/*": ["lib/*"],
    "@/services/*": ["services/*"],
    "@/validation/*": ["validation/*"]
  }
}
