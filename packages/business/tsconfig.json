{
  "extends": "@glyphx/tsconfig/node18.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "tsup.config.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "./src",
    "noImplicitAny": false
  },
  "paths": {
    "@/constants/*": ["src/constants/*"],
    "@/lib/*": ["src/lib/*"],
    "@/services/*": ["src/services/*"],
    "@/validation/*": ["src/validation/*"]
  }
}
