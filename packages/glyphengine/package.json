{
  "name": "glyphengine",
  "version": "1.0.0",
  "description": "Builds our glyphs and stores them in sgn and sdt files ",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "clean": "rimraf .turbo node_modules dist",
    "coverage": "TS_NODE_FILES=true nyc mocha -r ts-node/register -r tsconfig-paths/register --timeout 999999 --exit --recursive \"src/__tests__/**/*.tests.ts\"",
    "test": "TS_NODE_FILES=true mocha -r ts-node/register -r tsconfig-paths/register --recursive  --timeout 999999 --exit \"src/__tests__/**/*.tests.ts\"",
    "integrationTest": "DOTENV_CONFIG_PATH=src/__integrationTests__/.env.integration TS_NODE_FILES=true mocha -r ts-node/register -r tsconfig-paths/register  -r dotenv/config --recursive  --timeout 999999 --exit \"src/__integrationTests__/**/*.tests.ts\"",
   "lint": "eslint .",
    "fix": "gts fix",
    "count": "npx cloc .  -exclude-ext=csv --by-file-by-lang --exclude-dir=scripts,node_modules,build,.nyc_output,docs,dist,prisma"
  },
  "author": "JP Burford",
  "license": "ISC",
  "devDependencies": {
    "@aws-sdk/types": "3.222.0",
    "eslint-config-custom": "workspace:*",
    "fileingestion": "workspace:^1.0.0",
    "tsconfig": "workspace:*",
    "types": "workspace:*",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.7",
    "@types/rewire": "^2.5.28",
    "@types/sinon": "^10.0.13",
    "@types/uuid": "^9.0.0",
    "aws-sdk-client-mock": "^2.0.1",
    "chai": "^4.3.6",
    "fast-xml-parser": "^4.1.3",
    "gts": "^3.1.0",
    "mocha": "^10.1.0",
    "nyc": "^15.1.0",
    "rewire": "^6.0.0",
    "rimraf": "^3.0.2",
    "sinon": "^14.0.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "tsup": "^5.11.13",
    "tsx": "^3.7.1",
    "typescript": "4.9.5",
    "uuid": "^8.3.2"
  },
  "dependencies": {
    "@aws-sdk/client-athena": "3.223.0",
    "@aws-sdk/client-s3": "3.223.0",
    "@aws-sdk/client-secrets-manager": "3.223.0",
    "@aws-sdk/lib-storage": "3.223.0",
    "business": "workspace:*",
    "core": "workspace:*",
    "database": "workspace:*",
    "dotenv": "^16.0.3",
    "server-only": "^0.0.1"
  }
}
